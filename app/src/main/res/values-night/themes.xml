<resources>
    <!-- Base application theme. -->
    <style name="Theme.Pokedex" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Toolbar color. -->
        <item name="colorSurface">?attr/colorPrimaryVariant</item>
        <!-- Toolbar text color-->
        <item name="colorOnSurface">@color/white</item>
        <!-- App text color -->
        <item name="android:textColor">@color/white</item>
        <!-- App input components color -->
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="SearchView.Pokedex" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/light_black</item>
    </style>
    <color name="secondTextColor">@color/dark_white</color>
</resources>